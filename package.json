{
  "name": "waqt",
  "version": "1.0.0",
  "description": "View Islamic prayer times for a specified location",
  "homepage": "https://github.com/arafatamim/waqt",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": "Tamim Arafat <tamim.arafat@gmail.com>",
  "license": "MIT",
  "build": {
    "appId": "com.tamim.waqt",
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "utility"
    },
    "win": {
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "electron-store": "^1.3.0",
    "npm": "^6.0.0"
  },
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-builder": "^20.11.1"
  }
}
